{
  "display": "Node 16",
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2021",
    "lib": [
      "es2021"
    ],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@d3lab/*": [
        "src/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types/global.d.ts"
    ]
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "ts-node": {
    "files": true
  }
}