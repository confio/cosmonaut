{
  "display": "Node 16",
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2021",
    "lib": [
      "es2021"
    ],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/src/",
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "@d3lab/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "ts-node": {
    "swc": true
  }
}